{
  "name": "vanilla-ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write \"{src,public}/**/*.{tsx,jsx,less}\"",
    "lint": "eslint \"{src,public}/**/*.{tsx,jsx}\" --fix",
    "update-all": "npx -p npm-check-updates ncu -u && npm install",
    "css:build": "lessc src/less.less src/less.css && tailwindcss src/less.css -o src/style.css --minify --watch"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "less": "^4.2.0",
    "less-loader": "^11.1.3",
    "postcss": "^8.4.28",
    "prettier": "^3.0.2",
    "tailwindcss": "^3.3.3",
    "typescript": "5.1.6",
    "vite": "^4.4.9"
  }
}
